{
  "name": "react-web-bee",
  "version": "1.0.0",
  "description": "Koajs + React with Redux javascript boilerplate project",
  "main": "index.js",
  "devDependencies": {
    "npm-run-all": "4.1.1"
  },
  "scripts": {
    "postinstall": "run-s -n client-install server-install",
    "start": "pnpm run server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-p -n server-dev client",
    "build": "cd ./client && pnpm run build",

    "dev-split": "start pnpm run client && start pnpm run server-dev",
    "dev-client": "run-p -n server client",

    "server": "cd ./server && pnpm start",
    "server-dev": "cd ./server && pnpm run dev",
    "server-install": "cd ./server && pnpm install",

    "client": "cd ./client && pnpm start",
    "client-install": "cd ./client && pnpm install"

  },
  "repository": {
    "type": "git",
    "url": "git+https://tnobrega@bitbucket.org/9beejava/react-web-bee.git"
  },
  "keywords": [
    "9bee",
    "react",
    "koa",
    "web"
  ],
  "author": "Tiago Nobrega",
  "license": "ISC",
  "homepage": "https://bitbucket.org/9beejava/react-web-bee#readme"
}
